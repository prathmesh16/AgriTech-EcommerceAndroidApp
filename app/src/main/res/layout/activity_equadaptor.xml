<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    tools:context=".AdapterFiles.Equadaptor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="-10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_name"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="10dp"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_view_price"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:text="Price"
                    android:textColor="#D3BB2727"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/text_view_cat"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:text="Catagory" />

                <RatingBar
                    android:id="@+id/ratingBar2"
                    style="@android:style/Widget.Holo.RatingBar.Small"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="150dp"
                    android:max="5"
                    android:maxHeight="50dip"
                    android:minHeight="50dip"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="0.5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="184dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom|right"
                android:layout_margin="10dp"
                android:layout_marginLeft="70dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/add_to_cart" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    app:srcCompat="@drawable/buy_now_button" />

            </LinearLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/progrees1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <include layout="@layout/shimmer_equp" />

            </com.facebook.shimmer.ShimmerFrameLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                tools:srcCompat="@drawable/profile_bk" />

        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>